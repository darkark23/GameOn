<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activities.MenuPrincipalActivity">

    <Button
        android:id="@+id/botao_salvar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Salvar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/botao_cancelar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="Cancelar"
        app:layout_constraintBottom_toTopOf="@+id/botao_salvar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TableLayout
        android:layout_width="368dp"
        android:layout_height="432dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/nome_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome da sessão" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/campo_nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Digite um nome para a sessão..."
                android:textColor="#FFFFFF"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/jogo_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jogo" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <AutoCompleteTextView
                android:id="@+id/jogo_text_view"
                android:layout_width="354dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="Escolha o game da sessão"
                android:completionHint="Escolha um Jogo"
                android:completionThreshold="1"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/inicio_label"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inicio" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="0dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/data_inicio_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="23/10/22"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/horario_inicio_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="23:59"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />
            </TableRow>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="0dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/botao_data_inicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="editar Data" />
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/botao_hora_inicio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="editar Horário" />
            </TableRow>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fim_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fim" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="0dp"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/data_fim_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="23/10/22"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/horario_fim_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="23:59"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp" />
            </TableRow>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="0dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/botao_data_fim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="editar Data" />
            </TableRow>

            <TableRow
                android:layout_width="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/botao_hora_fim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="editar Horário" />
            </TableRow>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/public_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Publico ?" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/publico_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:spinnerMode="dropdown"
                android:text="Sim"
                android:textColor="#FFFFFF"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="89dp">

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="89dp">

        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>